#!/usr/bin/ksh
# CHANGE


NAMES=
NAMES="${NAMES} SEARCHNAMEVAR FILEROOTVAR LOGTABVAR MSFNAMEVAR ERRFILEVAR"
NAMES="${NAMES} PROGRAMROOTVAR OPTSVAR MAILHOSTVAR SVCVAR DEBUGFDVAR"


for F in "${@}" ; do

if [[ -r "${F}" ]] ; then

for N in $NAMES ; do

fgrep "${N}" $F > /dev/null
if [[ $? -eq 0 ]] ; then

ed - $F <<\EOF
	g/SEARCHNAMEVAR/s//VARSEARCHNAME/g
	g/FILEROOTVAR/s//VARFILEROOT/g
	g/LOGTABVAR/s//VARLOGTAB/g
	g/MSFNAMEVAR/s//VARMSFNAME/g
	g/ERRFILEVAR/s//VARERRFIL/g
	g/PROGRAMROOTVAR/s//VARPROGRAMROOT/g
	g/OPTSVAR/s//VAROPTS/g
	g/MAILHOSTVAR/s//VARMAILHOST/g
	g/SVCVAR/s//VARSVC/g
	g/DEBUGFDVAR/s//VARDEBUGFD/g
	w
	q
EOF

fi

done

fi

done


